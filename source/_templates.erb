<script id="map-template" type="text/template">
  <div class="map">
    <img src="http://cluster3.lib.berkeley.edu/EART/images/blog_openstreetmap.jpg">
  </div>
</script>

<script id="search-template" type="text/template">
  <header>
    <h1>Texas Hospital Explorer</h1>
    <p>
      Choosing the right hospital can be a matter of life or death. Use this application to learn more about the quality of care available at each of Texas TK hospitals, and see how your local hospitals compare to each other, state and national standards.
    </p>
  </header>
  <button>Find hospitals near you</button>
  <span>or</span>
  <form>
    <input type="search" placeholder="Find hospital by name or zipcode"/>
    <input type="submit" value="Search">
    <span class="error hide">Nothing to search</span>
  </form>
</script>

<script id="hospital-template" type="text/template">
  <td><input type='checkbox'></td>
  <td>{{= name }}</td>
  <td>{{= distance }} miles</td>
  <td>{{= phone_number }}</td>
  <td>{{= type }}</td>
  <td>{{= emergency_services }}</td>
</script>

<script id="no-hospitals-template" type="text/template">
  <h1>No hospitals</h1>
</script>

<script id="hospitals-template" type="text/template">
  <h1>Results</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Hospital</th>
        <th>Distance</th>
        <th>Phone number</th>
        <th>Type</th>
        <th>Emergency Services</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</script>
