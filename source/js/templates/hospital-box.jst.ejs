<section class="hosp-information">
  <header>
    <input type='checkbox' class='hospital-selector' data-id="<%= _id %>">
    <h4>
      <%= name %>
    </h4>
  </header>
  <section class="information">
    <% if(showDistance){%><div class="value">
      Distance: <%= distance %> miles
    </div><%}%>
    <div class="value"><%= type %></div>
    <% if (hasEmergencyServices) { %><div class="value-header">
      Has Emergency Services
    </div><% } %>
    <div class="value">
      <a href="tel:+1<%= phone_number %>"><%= phone_number %></a>
    </div>
    <div class="value"><%= address %></div>
    <div class="value"><%= city %>, TX <%= zipcode %></div>
  </section>
  <section class="controls">
  <a class="button" href="<%= url %>.html">View more details</a>
</section>
</section>
<section class="hospital-map">
  <img src="http://api.tiles.mapbox.com/v4/<%= app.Settings.mapId %>/pin-s-hospital+<%= app.Settings.markerSelectedColorOnlyCode %>(<%=longitude%>,<%=latitude%>)/<%=longitude%>,<%=latitude%>,<%= app.Settings.mapZoom %>/<%= mapWidth %>x150.png?access_token=pk.eyJ1IjoidGV4YXN0cmlidW5lIiwiYSI6Ilo2eDhZWmcifQ.19qcXfOTN6ulkGW5oouiPQ"/>
</section>
